# ~/.gitconfig - user-specific global Git configuration file

[user]
	name = quentin
	email = quentin@minster.io
	signingkey = 0F5F912C
[push]
	default = simple
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	dt = difftool
	h = help
	last = !git --no-pager log -1 --stat
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	mwpull = pull --rebase
	mwpush = !git push && git pull --rebase
	st = status -sb
	sti = status -sb --ignored
	stn = status -sb -uno
	stm = status -sb --ignore-submodules
	t = task
	unstage = reset HEAD --
[github]
	user = laomaiweng
[transfer]
	fsckObjects = true

# vim: noet
