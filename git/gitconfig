# ~/.gitconfig - user-specific global Git configuration file

[user]
	name = quentin
	email = quentin@minster.io
	signingkey = AA0929D0263BE9D6C260BDC5FF79BF270F5F912C
[init]
	defaultBranch = main
[pull]
	ff = only
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	dt = difftool
	h = help
	last = !git --no-pager log -1 --stat
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
	lga = lg --all
	mwpull = pull --rebase
	mwpush = !git push && git pull --rebase
	st = status -sb
	sti = status -sb --ignored
	stn = status -sb -uno
	stm = status -sb --ignore-submodules
	t = task
	unstage = reset HEAD --
	ff = merge --ff-only
[github]
	user = laomaiweng
[transfer]
	fsckObjects = true
[core]
	excludesfile = ~/.cvsignore
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only --features=interactive

